@model Minicore_Notas.Models.ViewModel.GradeVM


<div style="display: flex; flex-direction: column; gap: 20px; padding: 10px;">
    <div style="display: flex; justify-content: space-between; gap: 10px;">
        @*ESTUDIANTES*@
        <div style="border: solid 1px #d3d3d3; background-color: #f8d7da; width: 47%;">
            <div class="form-container">
                <h2>Estudiantes</h2>
                <div class="input-group" >
                    <form asp-action="CreateStudent" style="display: flex; justify-content: space-between; gap: 3px;">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="form-group">
                            <label asp-for="Student.Name" class="control-label"></label>
                            <input asp-for="Student.Name" class="form-control" />
                            <span asp-validation-for="Student.Name" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <input type="submit" value="+" class="btn btn-primary" />
                        </div>
                    </form>
                </div>
                @*TABLA DE ESTUDIANTES*@
                <table class="table">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>Nombre</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.StudentsList)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Id)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Name)
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>

        @*NOTAS*@
        <div style="border: solid 1px #d3d3d3; background-color: #d4edda; width: 47%; ">
            <h2>Calificaciones</h2>
            <div class="input-group">
                <form asp-action="CreateGrade">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="Grade.Name" class="control-label"></label>
                        <input asp-for="Grade.Name" class="form-control" />
                        <span asp-validation-for="Grade.Name" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Grade.GradeValue" class="control-label"></label>
                        <input asp-for="Grade.GradeValue" class="form-control" />
                        <span asp-validation-for="Grade.GradeValue" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Grade.Date" class="control-label"></label>
                        <input asp-for="Grade.Date" class="form-control" />
                        <span asp-validation-for="Grade.Date" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Grade.StudentId" class="control-label"></label>
                        <select asp-for="Grade.StudentId" class="form-control" asp-items="ViewBag.StudentId"></select>
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Create" class="btn btn-primary" />
                    </div>
                </form>
            </div>
            @*TABLA DE NOTAS*@
            <table class="table">
                <thead>
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.Grade.Name)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Grade.GradeValue)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Grade.Date)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Grade.Student)
                        </th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.GradesList)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.Name)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.GradeValue)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Date)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Student.Name)
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

